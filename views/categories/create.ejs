
<%- include('./../layouts/dashboard/header', {title, href}) %>

<%- include('./../layouts/dashboard/sidebar', {title}) %>

<aside class="right-side">

    <section class="content-header">
                    <h1>
                        Create Categories
                        <small>Control panel</small>
                    </h1> 
                    <ol class="breadcrumb">
                        <li><a href="/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                        <li class="active">Create Categories</li>
                    </ol>
    </section>

    <section class="content">

        <div class="row">
          <!-- left column -->
          <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">

                <form id="categoryForm" role="form" method="post" action="/categories/add" 
											enctype="multipart/form-data">
											
                     <div class="box-body">
                        
                           <div class="form-group">
                                <label>Main category</label>

                                <select class="form-control" name="category-list" id="category-list">
																		<option value="">--Select category--</option>
                                    <option>PHP</option>
                                    <option>ASP.net</option>						
																		<option value="createNew" data-toggle="modal"
																					  data-target="#myModal" >--Create new--</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Sub category</label>
                                <select class="form-control" name="category-list" id="category-list">
																		<option value="">--Select subcategory--</option>
                                    <option>Yii</option>
                                    <option>Yii2</option>
																		<option>Error handling</option>
                                </select>                            
														</div>

														<div class="form-group">
                                <label>Title</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       placeholder="Enter Title">     
                            </div>

														<div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="3" placeholder="Enter ..."></textarea>
                            </div>

														<div class="form-group">
                                <label for="uploads">File uploads</label>
                                <input type="file" id="uploads" name="uploads">
                            </div>

                    </div> <!-- /.box-body -->

                    <div class="box-footer">
                            <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
                            <input type="button" class="btn btn-warning" value="Cancel" onclick="createDomain()"></input>
                    </div>
                </form>  
								
            </div>
          </div> 
        </div>
     
     </section>     

</aside>   


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Create Category</h4>
        </div>
        <div class="modal-body">
          <p>Please fill the below details to add a new category.</p>
          <form id="categoryForm" action="/categories/create" method="post">
              <div class="form-group">
                                <div class="form-group">
                                    <label>Category Name</label>
                                    <input type="text" class="form-control" id="category_name"
                                          name="category_name" placeholder="Enter Title">         
                                </div>

                                <div class="form-group">
                                    <label>Category Description</label>
                                    <textarea class="form-control" rows="3" 
                                              placeholder="Enter ..."></textarea>
                                </div>
              </div>
          </form>
        </div>
        <div class="modal-footer">
					<button type="button" class="btn btn-success" data-dismiss="modal">Save</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
</div>




<%- include('./../layouts/dashboard/footer') %>