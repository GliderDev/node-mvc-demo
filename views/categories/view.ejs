<%- include ../../public/layout/header.ejs %>

<h1><%=page_title%></h1>

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addCategory();">+ Add</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>

                    <th>Category Name</th>
                    <th>Description</th>                  
                    <th width="120px">Action</th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].domain%></td>
                    <td><%=data[i].description%></td>
                    
                    <td>
                        <a class="a-inside edit" href="../categories/edit/<%=data[i].domain_id%>">Edit</a>
                       
                        <a class="a-inside delete" href="../categories/delete/<%=data[i].domain_id%>">Del</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
        
<%- include ../../public/layout/footer.ejs %>